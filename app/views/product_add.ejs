<!DOCTYPE html>
<html>
  
    <%- include("link") %>

<body>
      
        <div class="modal-dialog" role="document">


    <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">ADD PRODUCT</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">





          <form action="/add_product" method="POST">
            
          
          
            <div class="row">
              <div class="col">
                <input type="text" class="form-control" placeholder="product name" name="name_pro">
              </div>
              </div><br>
              
            
            <div class="row">
              <div class="col">
                <select  class="form-control" placeholder="Location" name="location">
                    
                    
                  <option>select location</option>
                  <option>delhi</option>
                  <option>rajasthan</option>
                  <option>bangluru</option>
                  <option>uttrakhand</option>
                  </select>
              </div>
            </div><br>
          
              
            <div class="row">
                <div class="col">
                    <label><b>upload image</b></label>
                  <input  type="file" class="form-control" placeholder="select image" name="image_pro">
                  
                </div>
              </div><br>
            


              <div class="form-row">
                  <div class="form-control">
                    <label for="inputEmail4">is active</label>
                  </div>
                  <div class="form-group col-md-8">
                  <div class="form-check">
                <input class="form-check-input" type="radio" name="isActive" id="exampleRadios1" value="avtive" checked>
                <label class="form-check-label" for="exampleRadios1">
               yes
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="isActive" id="exampleRadios2" value="not active">
                <label class="form-check-label" for="exampleRadios2">
                no
                </label>
              </div>
                  </div>
                </div>  <br>


            <div class="row">
              <div class="col">
                <select  class="form-control" placeholder="customer id" name="cat_id_pro">
                    
                    
                  <option >select customer id</option>
                  <% for(let data of parent_cutomer_id){%>
                    <option value="<%=data._id%>"><%=data.customer_name%></option>
                  <%}%>
                </select>
              </div>
            </div><br>
              
            <div class="row">
              <div class="col">
                <select  class="form-control" placeholder="sub category" name="category_pro">
                    
                    
                  <option>select category</option>
                  <% for(let data of parent_category_data){%>
                    <option value="<%=data._id%>"><%=data%></option>
                  <%}%>

                </select>
              </div>
            </div><br>

                  <div class="row">
                      <div class="col">
                          <label><b>added on</b></label>
                        <input  type="date" class="form-control" placeholder="added on" name="addedOn">
                        
                      </div>
                    </div><br>
                  
                  
            
          
          
              
          <div class="modal-footer">
          <div class="form-group col-md-4"></div>
          <div class="form-group col-md-8">  
          <input class="btn btn-primary button" type="submit" value="Submit">
          <input class="btn btn-primary" type="reset" value="Reset">  
          </div>
          </div>
          
          </form>
      </div>
</div>    
    
    
    </body>
</html>




